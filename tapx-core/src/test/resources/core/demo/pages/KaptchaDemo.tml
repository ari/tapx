<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:tx="tapestry-library:tapx">
  <head>
    <title>Kaptcha Demo</title>
  </head>
  <body>

    <h1>Kaptcha Demo</h1>


    <p id="message">${message}</p>

    <t:form t:id="form">
      <t:errors/>

      <table>
        <tr>
          <td>
            <t:label for="kf"/>
          </td>
          <td>
            <tx:kaptchaimage t:id="ki"/>
            <br/>
            <tx:kaptchafield label="Security Check" t:id="kf" image="ki"/>
          </td>
        </tr>
        <tr>
          <td>
          </td>
          <td>
            <input type="submit" value="Go"/>
          </td>
        </tr>
      </table>
    </t:form>

  </body>
</html>